<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#46B34A">


    <PreferenceCategory
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:title="@string/settings_category_title"
        app:iconSpaceReserved="false">


        <EditTextPreference
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_rect_light_grey_today"
            android:key="@string/settings_days_before_deadline_count"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/settings_how_many_days_before_label"
            android:title="@string/settings_how_many_days_before_title"
            app:defaultValue="2"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:background="@drawable/rounded_rect_light_grey_today"
            android:defaultValue="@string/settings_today_hours_repeat_default"
            android:entries="@array/hours_freq_labels"
            android:entryValues="@array/hours_freq_values"
            android:key="@string/settings_hours_freq_today_deadline_count"
            android:summary="@string/settings_how_many_hours_label"
            android:title="@string/settings_how_many_hours_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>


    <PreferenceCategory
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:title="@string/settings_category_help_title"
        app:iconSpaceReserved="false">

        <Preference
            android:key="@string/credits_btn_key"
            android:summary="@string/credits_btn_summary"
            android:title="@string/credits_btn_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/gdpr_btn_key"
            android:summary="@string/gdpr_btn_summary"
            android:title="@string/gdpr_btn_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_btn_key"
            android:summary="@string/settings_goto_system_app_settings_label"
            android:title="@string/settings_goto_system_app_settings_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_review_btn_key"
            android:summary="@string/settings_review_btn_summary"
            android:title="@string/settings_review_btn_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_myapps_btn_key"
            android:summary="@string/settings_myapps_btn_summary"
            android:title="@string/settings_myapps_btn_title"
            app:iconSpaceReserved="false" />


        <Preference
            android:key="@string/settings_support_btn_key"
            android:summary="@string/settings_support_btn_summary"
            android:title="@string/settings_support_btn_title"
            app:iconSpaceReserved="false" />


    </PreferenceCategory>

</androidx.preference.PreferenceScreen>