<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Add your data binding variables here if needed -->
    </data>

    <ScrollView
        android:id="@+id/main_settings_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            tools:context=".presentation.ui.settings.MainSettingsActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_settings_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:targetApi="lollipop">

                <TextView
                    android:id="@+id/settings_toolbar_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fredoka_one"
                    android:textAlignment="viewStart"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_settings_toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/mainSettingsActivity_title" />
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/settings_bg_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.1"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/food_background" />

            <!-- Replacing the fragment with the custom layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/custom_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/adView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_settings_toolbar">

                <!-- Title for Settings Category -->
                <TextView
                    android:id="@+id/category_settings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_settings_title"
                    android:textColor="@color/brown"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp" />

                <!-- EditText for "days_before_deadline_count" -->
                <EditText
                    android:id="@+id/days_before_deadline_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_rect_light_grey_today"
                    android:hint="@string/how_many_days_before_title"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_settings_title"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Spinner for "hours_freq_today_deadline_count" -->
                <Spinner
                    android:id="@+id/hours_freq_today_deadline_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_rect_light_grey_today"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/days_before_deadline_count"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Title for Help Category -->
                <TextView
                    android:id="@+id/category_help_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_help_title"
                    android:textColor="@color/brown"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hours_freq_today_deadline_count"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp" />

                <!-- Buttons for each help option -->
                <Button
                    android:id="@+id/credits_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/credits_btn_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_help_title"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/gdpr_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gdpr_btn_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/credits_btn_key"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/app_settings_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/goto_app_settings_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdpr_btn_key"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/review_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/review_btn_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_settings_btn_key"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/myapps_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/myapps_btn_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/review_btn_key"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <Button
                    android:id="@+id/support_btn_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/support_btn_title"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/myapps_btn_key"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/settings_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/colorAccent"
                app:fabSize="normal"
                app:layout_constraintBottom_toTopOf="@+id/adView"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_refrigerator_icon" />



            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/admob_key_bottom_banner"
                ads:layout_constraintBottom_toBottomOf="parent"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
