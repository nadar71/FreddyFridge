<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.indiewalkabout.fridgemanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".App"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="eu.indiewalkabout.fridgemanager.ui.IntroActivity"
            android:screenOrientation="portrait">
        </activity>


        <!-- ADMOB -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_key_app_id" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- InsertFoodActivity -->
        <activity
            android:name=".ui.InsertFoodActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <!-- FoodListActivity -->
        <activity
            android:name=".ui.FoodListActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <!-- Used for notifications -->
        <service
            android:name=".reminder.FoodReminderIntentService"
            android:exported="false" />

        <!-- Settings -->
        <activity
            android:name=".ui.MainSettingsActivity"
            android:screenOrientation="portrait" />


        <activity android:name=".ui.CreditsActivity"
            android:screenOrientation="portrait" />

        <!-- JobService declaration used in FirebaseJobDispatcher -->
        <service
            android:name=".reminder.FoodReminderWorker"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>